<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bluesky.mobileEEI.MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/Connect"
        android:layout_width="256dp"
        android:layout_height="60dp"
        android:layout_marginBottom="70dp"
        android:layout_marginTop="58dp"
        android:text="Connect"
        app:layout_constraintBottom_toTopOf="@+id/SummaryPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Parse"
        android:layout_width="265dp"
        android:layout_height="0dp"
        android:layout_marginBottom="42dp"
        android:text="Parse"
        app:layout_constraintBottom_toTopOf="@+id/FaultsPage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SummaryPage" />

    <Button
        android:id="@+id/SummaryPage"
        android:layout_width="268dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:text="Summary"
        app:layout_constraintBottom_toTopOf="@+id/Parse"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Connect" />

    <Button
        android:id="@+id/FaultsPage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="52dp"
        android:text="Faults"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Parse" />
</android.support.constraint.ConstraintLayout>
